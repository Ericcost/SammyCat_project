<section class="relative">
  <div class="max-w-xl mx-auto px-4 sm:px-6 relative">
      <div class="pt-32 pb-12 md:pt-40 md:pb-20">
          
          <!-- Page header -->
          <div class="max-w-3xl mx-auto text-center pb-12 md:pb-16">
              <h1 class="h1 font-red-hat-display mb-4">Connecte toi!</h1>
              <p class="text-xl text-gray-600 dark:text-gray-400">Vendeur de chats depuis 1998.</p>
          </div>

          <!-- Contact form -->
          <form class="max-w-xl mx-auto" action="/users/sign_in" method="POST">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              <div class="flex flex-wrap -mx-3 mb-5">
                  <div class="w-full px-3">
                      <label class="block text-gray-800 dark:text-gray-300 text-sm font-medium mb-1" for="email">Email <span class="text-red-600">*</span></label>
                      <input id="email" name="user[email]" type="email" autocomplete="email" class="form-input w-full" placeholder="Enter your Email" required />
                  </div>
              </div>
              <div class="flex flex-wrap -mx-3 mb-2">
                  <div class="w-full px-3">
                      <label class="block text-gray-800 dark:text-gray-300 text-sm font-medium mb-1" for="password">Password (6 characters minimum) <span class="text-red-600">*</span></label>
                      <input id="password" name="user[password]" type="password" class="form-input w-full" placeholder="Enter your Password" required />
                  </div>
              </div>
              <div class= "text-sm">
                <a href="/users/password/new" class= "font-medium text-indigo-600 hover:text-indigo-500"> Forgot your password?</a>
              </div>
              <div class="flex flex-wrap -mx-3 mt-6">
                  <div class="w-full px-3">
                      <button class="btn text-white bg-teal-500 hover:bg-teal-400 w-full flex items-center">
                          <span>Connexion</span>
                          <svg class="w-3 h-3 shrink-0 mt-px ml-2" viewBox="0 0 12 12" xmlns="http://www.w3.org/2000/svg">
                              <path class="fill-current" d="M6.602 11l-.875-.864L9.33 6.534H0v-1.25h9.33L5.727 1.693l.875-.875 5.091 5.091z" />
                          </svg>
                      </button>
                  </div>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <input type="hidden" name="user[remember_me]" value="0" class="h-4 w-4 text-indigo-600 focus:ring-ind">
                  <input id="remember-me" name="user[remember_me]" value="1" type="checkbox" class="h-4 w-4 text-indigo">
                  <label for="remember_me" class="ml-2 block text-sm text-gray-900"> Remember me</label>
                  </div>
              </div>

      </div>
  </div>
</section>